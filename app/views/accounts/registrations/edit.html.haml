%h2
  Edit #{resource_name.to_s.humanize}
= bootstrap_form_for(resource, as: resource_name, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9", url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  = f.email_field :email, autofocus: true
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}

  = f.password_field :password, autocomplete: "off", help_block:'(leave blank if you don't want to change it)'
  = f.password_field :password_confirmation, autocomplete: "off"
  = f.password_field :current_password, autocomplete: "off", help_block: '(we need your current password to confirm your changes)'

  = f.form_group do
    = f.submit "Update"
    
%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
= link_to "Back", :back