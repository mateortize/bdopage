    = csrf_meta_tags
    %script{:src => "//cdn.pandastream.com/u/2.1/panda-uploader.min.js"}
  %body
    .container
      = render "layouts/header"
      = render "/shared/flashes"
      = yield

    %script{:src => "//cdn.pandastream.com/u/2.0/panda-uploader.min.js"}
    = yield :javascript