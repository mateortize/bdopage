#top-header.navbar.navbar-fixed-top.navbar-inverse{:role => "navigation"}
  .container.header-content
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => root_path}
        =image_tag 'logo.png'
    .collapse.navbar-collapse
      - unless current_account.blank?
        = link_to "Manage your posts", admin_posts_path
        %p.navbar-text.navbar-right
          = link_to "Sign out", destroy_account_session_path, :method => 'delete'
        %p.navbar-text.navbar-right
          %a.primarycolor{:href => account_path(current_account) }
            Signed in as
            = current_account.full_name
      - else
        %p.navbar-text.navbar-right
          = link_to "Sign In", new_account_session_path

