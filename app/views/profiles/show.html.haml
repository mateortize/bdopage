.container
  .bgwhite
    .row
      .col-md-12
        %h2 Account Profile
        %p
          %strong Name
          = @current_author.full_name

        %p
          %strong Email
          = @current_author.email
        %p
          = image_tag(@current_author.profile.avatar_url) if @current_author.profile.avatar?
        %p
          %strong Blog alias:
          %strong 
            = @current_author.setting.blog_alias

        - if @current_author == current_account
          %p
            = link_to 'Edit Profile', edit_admin_profile_path, class: 'btn btn-warning'
            = link_to 'Change Blog Alias', edit_admin_setting_path, class: 'btn btn-danger'
