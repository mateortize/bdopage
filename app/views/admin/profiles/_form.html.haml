= bootstrap_form_for(@profile, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9", url: admin_profile_path) do |f|
  = f.text_field :first_name
  = f.text_field :last_name
  - if @profile.avatar?
    = f.form_group do
      = image_tag(@profile.avatar_url, :class => 'img-responsive editprofileimg')
      = f.check_box :remove_avatar
  - else
    = f.file_field :avatar
    
  = f.text_area :description

  - if !@profile.private_fields.blank?
    - @profile.private_fields.each do |field_name|
      = field_name
  %hr
  = f.form_group do
    = f.submit "Save", class: 'btn btn-primary'
    = link_to 'Cancel', admin_profile_path, class: 'btn btn-default'