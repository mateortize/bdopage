#admin-overview
  .row
    .col-md-12
      .bgwhite
        %h2 Your posts
        .shortline
        %p.text-right
          = link_to "Add New", new_admin_post_path, class: "btn btn-primary"

        %table.table
          %thead
            %tr
              %th Screenshot
              %th Title
              %th Summary
              %th Comments
              %th Created At
              %th Updated At
              %th
          %tbody
            = render @posts
        = paginate @posts